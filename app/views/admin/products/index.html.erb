<div class="pull-right">
  <%= link_to("新增产品",new_admin_product_path(@product), :class => "btn btn-primary btn-xs") %>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <th>#</th>
      <th>产品名字</th>
      <th>描述</th>
      <th>库存</th>
      <th>管理选项</th>
      <th>创建日期</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>#</td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td>
          <%= link_to("编缉产品", edit_admin_product_path(product), :class => "btn btn-success btn-xs") %>
          <%= link_to("删除产品", admin_product_path(product), :method => :delete, :class => "btn btn-danger btn-xs") %>
        </td>
        <td><%= product.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
