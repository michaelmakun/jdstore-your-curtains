<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>JDstore 后台</title>
    <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag  'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render "common/navbar" %>
      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
            <li><%= link_to("全部商品", admin_products_path, :class => "btn btn-success") %></li>
            <li><%= link_to("订单查询", admin_orders_path, :class => "btn btn-danger") %></li>
            <li><%= link_to("类别管理", admin_categories_path, class: "btn btn-info") %></li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
