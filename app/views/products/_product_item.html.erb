    <%= link_to add_to_cart_product_path(product), method: :post, class: "productList-item-cartBtn", remote: :true do %>
      <i class="fa fa-cart-plus col-red"></i>
    <% end  %>
  <% end %>
  <% if product.quantity <= 0 %>
    <p class="productList-item-sellout">已售完</p>
  <% end %> -->
</li>
