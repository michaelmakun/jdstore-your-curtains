<div class="productList-item <%= last_item(index) %>">
  <p class="productList-item-pic">
    <%= link_to product_path(product) do %>
      <% if product.photos.present? %>
        <%= image_tag(product.photos[0].avatar.thumb.url ) %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
      <% end %>
    <% end %>
  </p>
  <p class="productList-item-price"> Â¥ <%= product.price %></p>
  <p class="propductList-item-heart">
    <% if current_user %>
      <% if !current_user.favorite_product?(product) %>
        <%= link_to(content_tag(:i, "", class: "fa fa-heart fa-lg"), add_favorite_product_path(product), method: :post ) %>
      <% else %>
        <%= link_to(content_tag(:i, "", class: "fa fa-heart fa-lg", style: "color: red"), cancel_favorite_product_path(product), method: :post ) %>
      <% end %>
    <% end %>
  </p>
  <p class="productList-item-name">
    <%= link_to product_path(product) do %>
      <%= product.title %>
    <% end %>
  </p>
  <p class="productList-item-desc"><%= product.description %></p>
</div>
