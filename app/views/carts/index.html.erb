<div class="cart-title">
  <ul class="cart-title-list">
    <li class="cart-title-list-item"><b>购物车</b></li>
    <li class="cart-clean">
      <%= link_to("清空购物车", clean_carts_path,
                  method: :delete, class: "pull-right btn cart-clean",
                  data: { confirm: "你确定要清空整个购物车吗？"} )%>
    </li>
  </ul>
</div>

<div class="cart-content">
  <ul class="cart-content-title">
    <li class="cart-content-title-msg">商品信息</li>
    <li class="cart-content-title-title">名称</li>
    <li class="cart-content-title-price">单价</li>
    <li class="cart-content-title-quantity">数量</li>
    <li class="cart-content-title-operation">操作选项</li>
  </ul>
</div>
