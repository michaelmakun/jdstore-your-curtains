<div style= "margin-top:150px; margin-botton:30px;line-height:275%;">
    <h2 class="text-center", style="color:#584b4f;">用户注册</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
  <%= f.error_notification %>
</div>

  <div class="form-inputs">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.input :email, label: "邮箱", required: true, autofocus: true %>
    </div>
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.input :password, label: "输入密码", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    </div>
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.input :password_confirmation, label: "请再次输入密码",required: true %>
    </div>
  </div>

  <div class="form-actions">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.button :submit, "注册", class: "btn btn-primary", style: "border: none;color:white;width:100%;background-color:#584b4f;border-radius:10px;" %>
    </div>
  </div>

  <div class="form-actions">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= render "users/shared/links" %>
    </div>
  </div>

  <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
    <span>其他方式登录</span>
    <%= link_to user_google_oauth2_omniauth_authorize_path do %>
      <button class="btn btn-danger", style="width:25%;background-color:#EA4335;border:none;"><i class="fa fa-google" aria-hidden="true"></i>Google</button>
    <% end %>
    <%= link_to user_facebook_omniauth_authorize_path do %>
      <button class="btn btn-primary", style="width:25%;background-color:#4862A3;border:none;"><i class="fa fa-facebook" aria-hidden="true"></i>Facebook</button>
    <% end %>
    <%= link_to user_github_omniauth_authorize_path do %>
      <button class="btn btn-info", style="width:25%;background-color:#000000;border:none;"><i class="fa fa-github" aria-hidden="true"></i>Github</button>
    <% end %>
  </div>

<% end %>
