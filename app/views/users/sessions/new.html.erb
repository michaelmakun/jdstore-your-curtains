<div style= "margin-top:150px; margin-botton:30px;line-height:275%;">
    <h2 class="text-center", style="color:#584b4f;">用户登录</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.input :email,label: "邮箱", required: false, autofocus: true %>
    </div>
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.input :password,label: "密码", required: false %>
    </div>
    <div  class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.input :remember_me,label: "记住密码", as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <div  class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= f.button :submit, "登录", class: "btn btn-primary", style: "border: none;color:white;width:100%;background-color:#584b4f;border-radius:10px;" %>
    </div>
  </div>
    <div  class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
        <%= render "users/shared/links" %>
    </div>
<% end %>
